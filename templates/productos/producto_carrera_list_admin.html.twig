<style>
    td.image-gallery{
        opacity: 0.7;
        filter: alpha(opacity=70); /* For IE8 and earlier */
    }
    td.image-gallery:hover{
        opacity: 1;
        filter: alpha(opacity=100); /* For IE8 and earlier */
    }
</style>
<td  data-toggle="modal" data-target="#{{ object.getId }}" class="image-gallery sonata-ba-list-field sonata-ba-list-field-text">
    <img class="center-block" style="height: 40px;" src="{{ asset('build/img/productos_carrera/' ~ object.getImageName) }}" title="" />
</td>


<!-- Modal -->
<div class="modal fade" id="{{ object.getId }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{ object.getImageName }}</h4>
      </div>
      <div class="modal-body">
        <img class="center-block img-responsive" src="{{ asset('build/img/productos_carrera/' ~ object.getImageName) }}" title="{{ object.getImageName }}" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
