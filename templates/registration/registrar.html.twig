{% extends 'layout.html.twig' %}
{% block logo %}
    {# include 'default/logo.html.twig' #}
{% endblock %}
{% block content %}
<div id="contenedor-global" class="pt-5 pb-0">
    <div class="container-fluid">

        <!-- Seccion Formulario -->
        <div class="seccion p-2 text-light">
            <div class="row">
                <div class="col-lg-4 col-md-6 mx-auto">
                    <p class="h1 text-center mt-4 mb-4">Registrar</p>
                    {{ form_start(registrationForm) }}
                        <div class="row">
                            {{ form_errors(registrationForm) }}
                            {% for message in app.flashes('error-codigo-grupo') %}
                                <div class="col-md-12 alert alert-danger" role="alert">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            <div class="col-md-12">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.password) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.nombre) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.apellido_1) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(registrationForm.apellido_2) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.telefono) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.direccion) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.mencion) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.isErasmus) }}
                            </div>
                            <div class="col-md-12">
                                {{ form_row(registrationForm.groupcode) }}
                            </div>
                        </div>
                        <button class="btn btn-block btn-primary">Registrar</button>
                    {{ form_end(registrationForm) }}
                        <p style="font-size: 0.9rem">Al registrarte aceptas nuestras <a href="#">Condiciones de uso.</a> Consulta nuestra <a href="#">Pol√≠tica de Cookies.</a></p>
                </div>
            </div>
        </div>
        <!--End Seccion Formulario -->

        <div class="row" style="padding:0; margin:0; height:30vh;">
            <div class="malla" style="background-color: rgba(0, 0, 0, .7) !important"></div>
            <div class="bg-container" style="background: #a8a8a8 !important;">
                <img width="100%" style="min-width: 600px" src="{{ asset('build/img/Inicio.jpg') }}">
            </div>
        </div>
    </div>
</div>

{% endblock %}
